{{#if refresh}}
  <i class="{{loadingClass}}"></i> {{loadingText}}
{{else}}
  {{#if displayTitle}}
    {{item-display model=model.title object=object inheritedHelpers=helpers handleLabelClicked="handleLabelClicked"
    handleValueClicked="handleValueClicked" handleHide="handleHideTitle"}}
  {{/if}}
  {{#if displayHeadings}}
    {{#unless collapsed}}
      {{headings-display model=model.headings object=object inheritedHelpers=helpers handleHide="handleHideHeadings"}}
    {{/unless}}
  {{/if}}
{{/if}}

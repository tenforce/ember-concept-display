{{#if disableEditing}}
  {{#if newValue}}
    <p class='no-edit'>{{newValue}}</p>
  {{else}}
    <p class="msg msg--empty">Nothing added for this concept.</p>
  {{/if}}
{{else}}
  {{textarea value=newValue cols="80" placeholder="Enter text here"}}

  {{#if showActions}}
    {{#if valueSaving}}
      <div class="actions">
        <i class="fa fa-circle-o-notch fa-spin"></i>
      </div>
    {{else if dirty}}
      <div class="actions">
        <button type="button" class="save" tabindex="-1" title="Save field"  {{action 'saveField'}}  disabled={{not dirty}}></button>
        <button type="button" class="cancel" tabindex="-1" title="Reset field" {{action 'resetField'}} disabled={{not dirty}}></button>
      </div>
    {{/if}}
  {{/if}}
{{/if}}
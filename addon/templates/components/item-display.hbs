{{#if model.label}}
    {{container-value-display model=model.label object=object inheritedHelpers=helpers clicked="handleLabelClicked"}}
    {{!value-display model=model.label object=object inheritedHelpers=helpers clicked="handleLabelClicked"}}
{{/if}}
{{#if isLoading}}
    {{#if model.loading}}
        {{!value-display model=loading object=object inheritedHelpers=helpers clicked="handleLoadingClicked"}}
        {{container-value-display model=model.loading object=object inheritedHelpers=helpers clicked="handleLoadingClicked"}}
    {{else}}
        {{loading-default}}
    {{/if}}
{{/if}}
{{#unless (and collapsible collapsed)}}
    {{!value-display model=model.value object=object inheritedHelpers=helpers clicked="handleValueClicked"}}
    {{container-value-display model=model.value object=object inheritedHelpers=helpers clicked="handleValueClicked"}}
{{/unless}}


{{#if modifiable}}
  {{#if (eq modifiable true)}}
    {{input type="text" value=boundValue size=modifiableSize placeholder=modifiablePlaceholder}}
  {{else if modifiable.type}}
    {{!This if else part is here to be able to specify the different parameters that could be sent (like disabled, checked,...)}}
    {{#if (eq modifiable.type "textarea")}}
      {{textarea value=boundValue cols=modifiableCols placeholder=modifiablePlaceholder}}
    {{else if (eq modifiable.type "text")}}
      {{input type="text" value=boundValue size=modifiableSize placeholder=modifiablePlaceholder}}
    {{else if (eq modifiable.type "checkbox")}}
      {{input type="checkbox" checked=boundValue}}
    {{/if}}
  {{/if}}
{{else}}
  {{#if (eq boundValue true)}}
    {{input type="checkbox" checked=true disabled=true}}
  {{else if (eq boundValue false)}}
    {{input type="checkbox" checked=false disabled=true}}
  {{else}}
    {{boundValue}}
  {{/if}}
{{/if}}
